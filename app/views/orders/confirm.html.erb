<div class="container">
	<div class="row">
		<h2>注文情報確認</h2>
	</div>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>商品名</th>
				<th>単価（税込）</th>
				<th>数量</th>
				<th>小計</th>
			</tr>
		</thead>
		<tbody>
			<% @cart_items.each do |cart_item| %>
				<tr>
					<th><%= attachment_image_tag cart_item.item, :product_image, :fill, 40, 20, fallback: "no_image.jpg", size:'40x20' %>
						<%= cart_item.item.name %>
					</th>
					<th><%= cart_item.item.price_excluding_tax %></th>
					<th><%= cart_item.amount %></th>
					<th><%= cart_item.item.price_excluding_tax*cart_item.amount %></th>
				</tr>
			<% end %>
		</tbody>
	</table>
	<table>
 		<tr>
 			<th>送料</th>
 			<td><%= @order_last.postage %></td>
 		</tr>
 		<tr>
 			<th>商品合計</th>
 			<td><%= @order_last.total_billed_amount %></td>
 		</tr>
 		<tr>
 			<th>請求金額</th>
 			<td><%= @order_last.postage+@order_last.total_billed_amount %></td>
 		</tr>
	</table>
	<div class="row">
		<h3>支払方法　<%= @order_last.payment_method_i18n %></h3>
	</div>
	<div class="row">
		<h3>お届け先　<%= @order_last.postal_code %>　<%= @order_last.address %>　<%= @order_last.receiver %></h3>
	</div>
	<div class="row">
		<div class="col-lg-12 text-center" style="margin-bottom: 30px;">
			<%= link_to "購入を確定する", orders_done_path,class: "btn btn-success"%>
		</div>
	</div>
</div>