<div class="container">
	<div class="row">
		<h1>商品一覧画面</h1>
	</div>
	<table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name%></td>
            <td><%= item.price_excluding_tax%></td>
            <td>
            	<% if item.genre_id == 1 %>
            		<p>ケーキ</p>
            	<% elsif item.genre_id == 2 %>
					<p>プリン</p>
            	<% elsif item.genre_id == 3 %>
					<p>焼き菓子</p>
            	<% elsif item.genre_id == 4 %>
					<p>キャンディ</p>
            	<% end %>
            </td>
            <td><%= item.sale_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>