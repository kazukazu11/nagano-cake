<div class="container">
	<div class="row">
		<h2>配送先編集</h2>
	</div>
	<%= form_for(@address) do |f| %>
		<div class="row">
			<div class="col-lg-3">
				<%= f.label :郵便番号（ハイフンなし） %>
			</div>
			<div class="col-lg-2">
				<%= f.text_field :postal_code %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-3">
				<%= f.label :住所 %>
			</div>
			<div class="col-lg-2">
				<%= f.text_field :street_address,:size => "40*40" %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-3">
				<%= f.label :宛名 %>
			</div>
			<div class="col-lg-2">
				<%= f.text_field :receiver %>
			</div>
		</div>
		<div class="row btn-lg text-center">
			<%= f.submit "編集する",class: "btn btn-primary"%>
		</div>
	<% end %>
</div>