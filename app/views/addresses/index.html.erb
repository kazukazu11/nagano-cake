<div class="container">
	<div class="row">
		<h2>配送先登録/一覧</h2>
	</div>
	<%= form_for(@address) do |f| %>
		<div class="row">
			<div class="col-lg-3">
				<%= f.label :郵便番号（ハイフンなし） %>
			</div>
			<div class="col-lg-2">
				<%= f.text_field :postal_code %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-3">
				<%= f.label :住所 %>
			</div>
			<div class="col-lg-2">
				<%= f.text_field :street_address,:size => "40*40" %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-3">
				<%= f.label :宛名 %>
			</div>
			<div class="col-lg-2">
				<%= f.text_field :receiver %>
			</div>
		</div>
		<div class="row btn-lg text-center">
			<%= f.submit "登録する"%>
		</div>
	<% end %>
	<table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code%></td>
            <td><%= address.street_address%></td>
            <td><%= address.receiver%></td>
            <td>
            	<%= link_to "編集する",edit_address_path(address.id),class: "btn btn-primary" %>
            	<%= link_to "削除する",address_path(address.id),method: :delete,"data-confirm"=>"本当に削除しますか？",class: "btn btn-danger"%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>