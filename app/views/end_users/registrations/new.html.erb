<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field row">
    <div class="col-lg-3">名前</div>
    <div class="col-lg-1 text-right">
    (
    <%= f.label :姓 %>
    )
    </div>
    <div class="col-lg-2">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="col-lg-1 text-right">
    (
    <%= f.label :名 %>
    )
    </div>
    <div class="col-lg-5">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>
  </div>

  <div class="field row">
    <div class="col-lg-3">フリガナ</div>
    <div class="col-lg-1 text-right">
    (
    <%= f.label :セイ %>
    )
    </div>
    <div class="col-lg-2">
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </div>
    <div class="col-lg-1 text-right">
    (
    <%= f.label :メイ %>
    )
    </div>
    <div class="col-lg-5">
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>

  <div class="field row">
    <div class="col-lg-4">
    <%= f.label :メールアドレス %>
    </div>
    <div class="col-lg-8">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="field row">
    <div class="col-lg-4">
    <%= f.label :郵便番号 %>
    (ハイフンなし)
    </div>
    <div class="col-lg-8">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>

  <div class="field row">
    <div class="col-lg-4">
    <%= f.label :住所 %>
    </div>
    <div class="col-lg-8">
    <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "62*62" %>
    </div>
  </div>

  <div class="field row">
    <div class="col-lg-4">
    <%= f.label :電話番号 %>
    (ハイフンなし)
    </div>
    <div class="col-lg-8">
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
    </div>
  </div>

  <div class="field row">
    <div class="col-lg-4">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    </div>
    <div class="col-lg-8">
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="field row">
    <div class="col-lg-4">
    <%= f.label :パスワード %>
    (確認用)
    </div>
    <div class="col-lg-8">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions btn-lg text-center row">
    <%= f.submit "新規登録" %>
  </div>
  <% end %>

  <div class="row">
    <h2>既に登録済みの方</h2>
  </div>

  <div class="row">
    <%- if controller_name != 'sessions' %>
    <%= link_to "こちら", new_session_path(resource_name) %>からログインください。</p>
    <% end %>
  </div>

</div>