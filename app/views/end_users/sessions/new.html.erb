<div class="container">

  <div class="row">
    <h4>会員の方はこちらからログイン</h4>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field row">
    <div class="col-lg-6 text-right">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-lg-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "70*70" %>
    </div>
  </div>

  <div class="field row">
    <div class="col-lg-6 text-right">
    <%= f.label :パスワード %>
    </div>
    <div class="col-lg-6">
    <%= f.password_field :password, autocomplete: "current-password", :size => "70*70" %>
    </div>
  </div>

  <div class="row text-right">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
    <% end %>
  </div>

  <!--
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  -->

  <div class="actions btn-lg text-center row">
    <%= f.submit "ログイン" %>
  </div>
  <% end %>

  <div class="row">
    <h4>登録がお済みでない方</h4>
  </div>

  <div class="row">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "こちら", new_registration_path(resource_name) %>
    <% end %>から新規登録を行ってください。
  </div>
</div>