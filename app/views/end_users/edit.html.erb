<div class="container">
	<div class="row">
		<h2>登録情報編集</h2>
	</div>
	<%= form_for(@end_user) do |f| %>
	<div class="field row">
		<div class="col-lg-3">名前</div>
		<div class="col-lg-1 text-right">
			(
			<%= f.label :姓 %>
			)
		</div>
		<div class="col-lg-2">
			<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
		</div>
		<div class="col-lg-1 text-right">
			(
			<%= f.label :名 %>
			)
		</div>
		<div class="col-lg-5">
			<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
		</div>
	</div>

	<div class="field row">
		<div class="col-lg-3">フリガナ</div>
		<div class="col-lg-1 text-right">
			(
			<%= f.label :セイ %>
			)
		</div>
		<div class="col-lg-2">
			<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
		</div>
		<div class="col-lg-1 text-right">
			(
			<%= f.label :メイ %>
			)
		</div>
		<div class="col-lg-5">
			<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
		</div>
	</div>

	<div class="field row">
		<div class="col-lg-4">
			<%= f.label :メールアドレス %>
		</div>
		<div class="col-lg-8">
			<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
		</div>
	</div>

	<div class="field row">
		<div class="col-lg-4">
			<%= f.label :郵便番号 %>
			(ハイフンなし)
		</div>
		<div class="col-lg-8">
			<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
		</div>
	</div>

	<div class="field row">
		<div class="col-lg-4">
			<%= f.label :住所 %>
		</div>
		<div class="col-lg-8">
			<%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "62*62" %>
		</div>
	</div>

	<div class="field row">
		<div class="col-lg-4">
			<%= f.label :電話番号 %>
			(ハイフンなし)
		</div>
		<div class="col-lg-8">
			<%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
		</div>
	</div>
	<div class="row text-right col-lg-7" style="padding-top: 20px;">
		<%=f.submit "編集内容を保存する"%>
	</div>
	<% end %>
</div>