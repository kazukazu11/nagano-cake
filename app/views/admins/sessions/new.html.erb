<div class="container" style="margin-top: 200px">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field row">
    <div class="col-lg-5 text-right">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-lg-7">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "50*50" %>
    </div>
  </div>

  <div class="field row">
    <div class="col-lg-5 text-right">
      <%= f.label :パスワード %>
    </div>
    <div class="col-lg-7">
      <%= f.password_field :password, autocomplete: "current-password", :size => "50*50"%>
    </div>
  </div>

  <!--
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
-->

  <div class="actions btn-lg text-center row">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

